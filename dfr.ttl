@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix schema: <https://schema.org/> .
@prefix untp-core: <https://test.uncefact.org/vocabulary/untp/core/0/> .
@prefix untp-dfr: <https://test.uncefact.org/vocabulary/untp/dfr/0/> .

untp-dfr:DigitalFacilityRecord a rdfs:Class ;
  rdfs:label "DigitalFacilityRecord" ;
  rdfs:comment "A digital verifiable credential holding facility performance information." ;
  rdfs:subClassOf "untp-core:VerifiableCredential" .

untp-dfr:FacilityRecord a rdfs:Class ;
  rdfs:label "FacilityRecord" ;
  rdfs:comment "The physical site (eg farm or factory) where the product or materials was produced. Including the facility sustainability performance record." .

untp-dfr:RenderTemplate2024 a rdfs:Class ;
  rdfs:label "RenderTemplate2024" ;
  rdfs:comment "A single template format focused render method--where the content/media type decision becomes secondary (and is expressed separately).See https://github.com/w3c-ccg/vc-render-method/issues/9" ;
  rdfs:subClassOf "untp-core:RenderTemplate2024" .

untp-dfr:WebRenderingTemplate2022 a rdfs:Class ;
  rdfs:label "WebRenderingTemplate2022" ;
  rdfs:comment "A simple (though non-standard) embedded template." ;
  rdfs:subClassOf "untp-core:WebRenderingTemplate2022" .

untp-dfr:conformityClaim a owl:ObjectProperty, rdf:Property ;
  rdfs:label "conformityClaim" ;
  rdfs:comment "A list of conformity declarations against specific criteria from recognised standards or regulations. " ;
  schema:domainIncludes untp-dfr:FacilityRecord ;
  schema:rangeIncludes untp-core:Claim .

untp-dfr:digestMultibase a owl:DatatypeProperty, rdf:Property ;
  rdfs:label "digestMultibase" ;
  rdfs:comment "Used for resource integrity and/or validation of the inline `template`" ;
  schema:domainIncludes untp-dfr:RenderTemplate2024 ;
  schema:rangeIncludes xsd:string .

untp-dfr:facility a owl:ObjectProperty, rdf:Property ;
  rdfs:label "facility" ;
  rdfs:comment "The physical site (eg farm or factory) where the product or materials was produced." ;
  schema:domainIncludes untp-dfr:FacilityRecord ;
  schema:rangeIncludes untp-core:Facility .

untp-dfr:id a owl:DatatypeProperty, rdf:Property ;
  rdfs:label "id" ;
  rdfs:comment "An id is not required in the data but jargon requires for blue class which won't redefine credentialSubject" ;
  schema:domainIncludes untp-dfr:FacilityRecord ;
  schema:rangeIncludes xsd:string .

untp-dfr:mediaQuery a owl:DatatypeProperty, rdf:Property ;
  rdfs:label "mediaQuery" ;
  rdfs:comment "Media query as defined in https://www.w3.org/TR/mediaqueries-4/" ;
  schema:domainIncludes untp-dfr:RenderTemplate2024 ;
  schema:rangeIncludes xsd:string .

untp-dfr:mediaType a owl:DatatypeProperty, rdf:Property ;
  rdfs:label "mediaType" ;
  rdfs:comment "content/media type for (possible) conneg on the above URL and certainly for display use" ;
  schema:domainIncludes untp-dfr:RenderTemplate2024 ;
  schema:rangeIncludes xsd:string .

untp-dfr:name a owl:DatatypeProperty, rdf:Property ;
  rdfs:label "name" ;
  rdfs:comment "Human facing display name for selection", "Human facing display name for template" ;
  schema:domainIncludes untp-dfr:RenderTemplate2024, untp-dfr:WebRenderingTemplate2022 ;
  schema:rangeIncludes xsd:string .

untp-dfr:template a owl:DatatypeProperty, rdf:Property ;
  rdfs:label "template" ;
  rdfs:comment "An inline template field ", "An inline template field for use cases where remote retrieval of a render method is suboptimal" ;
  schema:domainIncludes untp-dfr:RenderTemplate2024, untp-dfr:WebRenderingTemplate2022 ;
  schema:rangeIncludes xsd:string .

untp-dfr:url a owl:DatatypeProperty, rdf:Property ;
  rdfs:label "url" ;
  rdfs:comment "URL for remotely hosted template" ;
  schema:domainIncludes untp-dfr:RenderTemplate2024 ;
  schema:rangeIncludes xsd:string .


